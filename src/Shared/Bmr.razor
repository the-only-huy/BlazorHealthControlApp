@inject IModel  Model

<div class="tile" title="Basal Metabolic Rate">
    <h1>BMR:</h1>
    <h2>@Model.Bmr  Calories</h2>
</div>

@code {
    protected override void OnAfterRender(bool firstRender)
    {
        Model.Register(() => base.StateHasChanged());
        base.OnAfterRender(firstRender);
    }
}